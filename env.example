# Copy this file to .env.local and fill in your values.
# Never commit .env.local to git.

# --- Firebase (from Firebase Console: Project settings → Your apps → Web app) ---
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID_CLIENT1=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# --- Firebase Web Push (Project settings → Cloud Messaging → Web Push certificates → Key pair) ---
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-vapid-key

# --- Firebase Admin (Project settings → Service accounts → Generate new private key → paste full JSON) ---
FIREBASE_SERVICE_ACCOUNT_CLIENT1={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# --- Admin ---
ADMIN_PASSWORD=your-secure-admin-password
